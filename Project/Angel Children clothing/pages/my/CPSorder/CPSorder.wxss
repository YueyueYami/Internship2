.tabs {
  display: flex;
  background-color: #fff;
  padding: 25rpx 0;
  width: 100%;
  border-bottom: 1rpx solid #aaa;
}

.tabs view {
  flex: 1;
  text-align: center;
}

.tabs .bright {
  position: relative;
}

.tabs .bright::before {
  content: '';
  display: inline-block;
  width: 100rpx;
  height: 8rpx;
  background-color: red;
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  margin-left: -50rpx;
  border-radius: 50rpx;
}
